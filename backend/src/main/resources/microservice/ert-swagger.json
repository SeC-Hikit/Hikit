{
  "openapi": "3.0.1",
  "info": {
    "title": "Hikit ERT Microservice",
    "description": "Hikit ERT is a microservice to fetch data in relation to Emilia-Romagna tourism data",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:8991/api/v1",
      "description": "Generated server url"
    }
  ],
  "paths": {
    "/municipality": {
      "post": {
        "tags": [
          "municipality-controller"
        ],
        "summary": "Find within which municipalities a line is contained",
        "operationId": "findMunicipalitiesForLine",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LineRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/MunicipalityResponse"
                }
              }
            }
          }
        }
      }
    },
    "/municipality/{id}": {
      "get": {
        "tags": [
          "municipality-controller"
        ],
        "summary": "Retrieve a municipality by ID",
        "operationId": "getById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/MunicipalityResponse"
                }
              }
            }
          }
        }
      }
    },
    "/municipality/name/{name}": {
      "get": {
        "tags": [
          "municipality-controller"
        ],
        "summary": "Retrieve a municipality by name",
        "operationId": "getByName",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/MunicipalityResponse"
                }
              }
            }
          }
        }
      }
    },
    "/locality": {
      "get": {
        "tags": [
          "locality-controller"
        ],
        "summary": "Retrieve localities by distance from a point",
        "operationId": "get",
        "parameters": [
          {
            "name": "skip",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 0
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 150
            }
          },
          {
            "name": "latitude",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number",
              "format": "double"
            }
          },
          {
            "name": "longitude",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number",
              "format": "double"
            }
          },
          {
            "name": "distance",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number",
              "format": "double"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/LocalityResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Coordinates": {
        "type": "object",
        "properties": {
          "latitude": {
            "type": "number",
            "format": "double"
          },
          "longitude": {
            "type": "number",
            "format": "double"
          }
        }
      },
      "LineRequest": {
        "type": "object",
        "properties": {
          "coordinates": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Coordinates"
            }
          }
        }
      },
      "CityRefDto": {
        "type": "object",
        "properties": {
          "istat": {
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "province": {
            "type": "string"
          },
          "province_short": {
            "type": "string"
          },
          "iat": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/IatDto"
            }
          }
        }
      },
      "ContactDto": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      },
      "CoordinatesDto": {
        "type": "object",
        "properties": {
          "latitude": {
            "type": "number",
            "format": "double"
          },
          "longitude": {
            "type": "number",
            "format": "double"
          }
        }
      },
      "IatDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "number": {
            "type": "string"
          },
          "coordinates": {
            "$ref": "#/components/schemas/CoordinatesDto"
          },
          "contacts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ContactDto"
            }
          }
        }
      },
      "ImageDto": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string"
          },
          "thumb": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "width": {
            "type": "integer",
            "format": "int32"
          },
          "height": {
            "type": "integer",
            "format": "int32"
          },
          "license": {
            "type": "string"
          },
          "licenseUrl": {
            "type": "string"
          }
        }
      },
      "MunicipalityDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "coordinates": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CoordinatesDto"
            }
          },
          "image": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ImageDto"
            }
          },
          "relatingCity": {
            "$ref": "#/components/schemas/CityRefDto"
          },
          "recordDetails": {
            "$ref": "#/components/schemas/RecordDetailsDto"
          },
          "importedOn": {
            "type": "string",
            "format": "date-time"
          },
          "geometry": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CoordinatesDto"
            }
          }
        }
      },
      "MunicipalityResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": [
              "OK",
              "ERROR"
            ]
          },
          "messages": {
            "uniqueItems": true,
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "content": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MunicipalityDto"
            }
          }
        }
      },
      "RecordDetailsDto": {
        "type": "object",
        "properties": {
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "LocalityDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "coordinates": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CoordinatesDto"
            }
          },
          "image": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ImageDto"
            }
          },
          "relatingCity": {
            "$ref": "#/components/schemas/CityRefDto"
          },
          "recordDetails": {
            "$ref": "#/components/schemas/RecordDetailsDto"
          },
          "importedOn": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "LocalityResponse": {
        "type": "object",
        "properties": {
          "currentPage": {
            "type": "integer",
            "format": "int64"
          },
          "totalPages": {
            "type": "integer",
            "format": "int64"
          },
          "size": {
            "type": "integer",
            "format": "int64"
          },
          "totalCount": {
            "type": "integer",
            "format": "int64"
          },
          "status": {
            "type": "string",
            "enum": [
              "OK",
              "ERROR"
            ]
          },
          "messages": {
            "uniqueItems": true,
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "content": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/LocalityDto"
            }
          }
        }
      }
    }
  }
}